---
import { Icon } from "astro-icon/components";

/**
 * Only installed pack is: @iconify-json/mdi
 * Use mdi icons to keep it consistent.
 */
const socialLinks: {
	label: string;
	link: string;
	icon: string;
}[] = [
	// TODO: replace these URLs with yours
	// { label: "Google Scholar", link: "https://scholar.google.com/", icon: "mdi:school" },
	{ label: "GitHub", link: "https://github.com/hamzamooraj99", icon: "mdi:github" },
	{ label: "LinkedIn", link: "https://www.linkedin.com/hamza-mooraj", icon: "mdi:linkedin" },
	{ label: "Email", link: "mailto:hhmooraj@gmail.com", icon: "mdi:email-outline" },
];
---

<ul class="flex flex-wrap items-center gap-x-4 gap-y-2" aria-label="Social links">
	{
		socialLinks.map(({ label, link, icon }) => (
			<li>
				<a
					class="inline-flex items-center gap-2 hover:text-link"
					href={link}
					rel="noreferrer me"
					target={link.startsWith("mailto:") ? undefined : "_blank"}
				>
					<Icon aria-hidden="true" class="h-5 w-5" focusable="false" name={icon} />
					<span class="text-sm">{label}</span>
				</a>
			</li>
		))
	}
</ul>